@model IEnumerable<WebApplication2.Models.Employee>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Employee List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Add Employee</a>
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Employee Code
                    </th>
                    <th>
                        Employee Name
                    </th>
                    <th>
                        Action
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Employee in Model)
                {
                    <tr>
                        <td width="30%">@Employee.EmployeeCode</td>
                        <td width="30%">@Employee.EmployeeName</td>
                        <td width="40%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Employee" asp-action="Update" asp-route-Id="@Employee.Id" class="btn btn-primary mx-1">Update</a>
                                <a asp-controller="Employee" asp-action="Delete" asp-route-Id="@Employee.Id" class="btn btn-danger mx-1">Delete</a>
                                <a asp-controller="Employee" asp-action="Read" asp-route-Id="@Employee.Id" class="btn btn-info mx-1">View Details</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No items created yet</p>
    }

</div>